<tr>
  <td><%= link_to "#{product.id}", admin_product_path(product) %></td>
  <td>
    <%= link_to admin_product_path(product) do %>
      <% if product.image.present? %>
        <%= image_tag product.image.thumb.url, class: "img-thumbnail" %>
      <% else %>
        <%= image_tag "http://via.placeholder.com/200x200?text='NO+Pic'", class: "img-thumbnail" %>
      <% end %>
    <% end %>
  </td>
  <td><%= product.title %></td>
  <td><%= product.price %></td>
  <td>
    <%= link_to "Edit", edit_admin_product_path(product) %> |
    <%= link_to "Delete", admin_product_path(product), method: :delete %>
  </td>
</tr>
