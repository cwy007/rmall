<% provide(:title, "Change your password") %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-3 my-5 border-primary bg-light">
      <div class="card-block">
        <h4 class="card-title text-center h2">Change your password</h4>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change my password", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
