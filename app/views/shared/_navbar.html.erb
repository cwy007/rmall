            </a>
            <div class="dropdown-menu dropdown-menu-right bg-dark" aria-labelledby="navbarDropdown">
              <%= link_to fa_icon("edit", text: "Edit profile"), edit_user_registration_path, class: "dropdown-item text-white bg-dark" %>
